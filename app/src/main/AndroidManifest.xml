<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme._2048"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Asegúrate de tener la actividad PantallaPrincipal registrada -->
        <activity
            android:name=".PantallaPrincipal"
            android:exported="true" />

        <!-- Asegúrate de tener solo una declaración de Juego1Activity -->
        <activity
            android:name=".Juego1Activity"
            android:exported="false" />

        <!-- Agrega la actividad Juego2Activity aquí -->
        <activity
            android:name=".Juego2Activity"
            android:exported="false" />

        <!-- Declaración de TableActivity -->
        <activity
            android:name=".TableActivity"
            android:exported="true" />

    </application>

</manifest>
